<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tool="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_xl"
    android:background="@color/colorPrimary">


    <TextView
      android:id="@+id/screen_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginStart="@dimen/spacing_xl"
      android:textSize="@dimen/text_size_m"
      style="@style/PrimaryText"
      tool:text="\@godslew"/>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:gravity="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginEnd="@dimen/list_item_spacing"
      android:orientation="horizontal">

      <Button
        style="@style/PrimaryButton"
        android:backgroundTint="@color/cripple_red"
        android:layout_width="@dimen/spacing_l"
        android:layout_height="@dimen/spacing_l"
        android:layout_marginEnd="@dimen/list_item_spacing"
        android:background="@drawable/ic_delete_white_24dp"/>
    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>